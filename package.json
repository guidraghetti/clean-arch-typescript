{
  "name": "clean-arch-typescript",
  "version": "1.0.0",
  "repository": "https://github.com/geich/clean-arch-typescript.git",
  "author": "geich <eich.gabriel1@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "start:lambda": "serverless offline",
    "start:dev": "nodemon -L -r tsconfig-paths/register --files src/main/server.ts",
    "deploy:dev": "serverless deploy --stage dev",
    "test": "jest --passWithNoTests --runInBand --no-cache --silent",
    "test:unit": "npm test -- --watchAll -c jest-unit-config.js",
    "test:integration": "npm test -- --watchAll -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:verbose": "jest --passWithNoTests --runInBand --no-cache",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@shelf/jest-mongodb": "^2.2.1",
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^17.0.25",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.2",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "bson-objectid": "^2.0.3",
    "eslint": "^7.12.1",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.0.0",
    "git-commit-msg-linter": "^4.1.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.8",
    "mockdate": "^3.0.5",
    "nodemon": "^2.0.19",
    "serverless": "^3.21.0",
    "serverless-offline": "^9.1.0",
    "serverless-webpack": "^5.8.0",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.4.4",
    "webpack": "^5.74.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@graphql-tools/schema": "^8.5.1",
    "@graphql-tools/utils": "^8.9.0",
    "apollo-server-express": "^3.10.0",
    "bcryptjs": "^2.4.3",
    "express": "^4.18.0",
    "graphql": "^16.5.0",
    "graphql-scalars": "^1.17.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongo-round": "^1.0.0",
